generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Room {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  image      String
  location   Location
  attributes Attributes
  price      Price
}

type Location {
  city    String
  region  String
  country String
}

type Attributes {
  beds   Int
  guests Int
  baths  Int
}

type Price {
  was    Float?
  amount Float
}
